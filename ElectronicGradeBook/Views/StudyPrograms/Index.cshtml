@{
    ViewData["Title"] = "Освітні програми";
}

<div class="card-glass p-4 fade-up">
    <h2 class="mb-3">ОСВІТНІ ПРОГРАМИ</h2>

    <table class="table table-custom" id="studyProgramsTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Назва</th>
                <th>Тривалість (років)</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <div class="text-end mt-3">
        <button class="btn btn-primary btn-anim" id="addProgramBtn">
            <i class="fas fa-plus me-1"></i> Додати
        </button>
    </div>
</div>

<!-- Модалка -->
<div class="modal fade" id="studyProgramModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="studyProgramModalLabel" class="modal-title"></h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="spId" />
                <div class="mb-3">
                    <label for="spName" class="form-label">Назва</label>
                    <input type="text" class="form-control" id="spName" />
                </div>
                <div class="mb-3">
                    <label for="spDuration" class="form-label">Тривалість (років)</label>
                    <input type="number" step="0.5" class="form-control" id="spDuration" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-light" data-bs-dismiss="modal">Закрити</button>
                <button class="btn btn-primary" id="saveProgramBtn">Зберегти</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/studyPrograms.js"></script>
}

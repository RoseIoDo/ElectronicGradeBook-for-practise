@{
    ViewData["Title"] = "Виставлення оцінок (гнучка сторінка)";
}

<div class="card-glass p-4 fade-up">
    <h2>Виставлення оцінок</h2>

    <!-- Крок 1: Обрати факультет, спеціальність, групу/курс -->
    <div class="row mb-3">
        <div class="col-md-4">
            <label>Факультет:</label>
            <select id="facultySelect" class="form-select"></select>
        </div>
        <div class="col-md-4">
            <label>Спеціальність:</label>
            <select id="specialtySelect" class="form-select"></select>
        </div>
        <div class="col-md-4">
            <label>Група (або весь курс):</label>
            <select id="groupSelect" class="form-select"></select>
        </div>
    </div>

    <!-- Кнопка "Завантажити предмети" -->
    <button class="btn btn-info mb-3" id="loadSubjectsBtn">Завантажити предмети</button>

    <!-- Вкладки за предметами -->
    <ul class="nav nav-tabs" id="subjectsTabs"></ul>
    <div class="tab-content" id="subjectsTabContent"></div>
</div>

<!-- Модалка для історії версій -->
<div class="modal fade" id="historyModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Історія версій оцінки</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="historyBody">
                <!-- Тут динамічно відобразимо JSON -->
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Закрити</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/gradeBook.js"></script>
}

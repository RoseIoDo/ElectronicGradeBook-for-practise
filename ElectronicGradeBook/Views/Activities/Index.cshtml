@{
    ViewData["Title"] = "Активності";
}

<div class="card-glass p-4 fade-up">
    <h2 class="mb-3">АКТИВНОСТІ</h2>

    <table class="table table-custom" id="activitiesTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Назва</th>
                <th>Points</th>
                <th>Тип</th>
                <th>Опис</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <div class="text-end mt-3">
        <button class="btn btn-primary btn-anim" id="addActivityBtn">
            <i class="fas fa-plus me-1"></i> Додати активність
        </button>
    </div>
</div>

<!-- Модалка -->
<div class="modal fade" id="activityModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="activityModalLabel" class="modal-title"></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="activityId" />
                <div class="mb-3">
                    <label for="activityName" class="form-label">Назва</label>
                    <input type="text" class="form-control" id="activityName" />
                </div>
                <div class="mb-3">
                    <label for="points" class="form-label">Points</label>
                    <input type="number" class="form-control" id="points" />
                </div>
                <div class="mb-3">
                    <label for="type" class="form-label">Тип</label>
                    <input type="text" class="form-control" id="type" />
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Опис</label>
                    <textarea class="form-control" id="description"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-light" data-bs-dismiss="modal">Закрити</button>
                <button class="btn btn-primary" id="saveActivityBtn">Зберегти</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/activities.js"></script>
}

@{
    ViewData["Title"] = "Студентські пільги/привілеї";
}

<div class="card-glass p-4 fade-up">
    <h2 class="mb-3">СТУДЕНТСЬКІ ПІЛЬГИ</h2>

    <table class="table table-custom" id="spTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Студент</th>
                <th>Привілей</th>
                <th>Дата надання</th>
                <th>Дата відкликання</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <div class="text-end mt-3">
        <button class="btn btn-primary btn-anim" id="addSpBtn">
            <i class="fas fa-plus me-1"></i> Додати
        </button>
    </div>
</div>

<!-- Модалка -->
<div class="modal fade" id="spModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="spModalLabel" class="modal-title"></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="spId" />
                <div class="mb-3">
                    <label class="form-label">Студент</label>
                    <select id="studentSelect" class="form-select"></select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Привілей</label>
                    <select id="privilegeSelect" class="form-select"></select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Дата надання</label>
                    <input type="date" id="dateGranted" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Дата відкликання</label>
                    <input type="date" id="dateRevoked" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-light" data-bs-dismiss="modal">Закрити</button>
                <button class="btn btn-primary" id="saveSpBtn">Зберегти</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/studentPrivileges.js"></script>
}

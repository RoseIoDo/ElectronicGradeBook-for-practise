@{
    ViewData["Title"] = "Викладачі";
}

<div class="card-glass p-4 fade-up">
    <h2 class="mb-3">ВИКЛАДАЧІ</h2>

    <table class="table table-custom" id="teachersTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>ПІБ</th>
                <th>Посада</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <div class="text-end mt-3">
        <button class="btn btn-primary btn-anim" id="addTeacherBtn">
            <i class="fas fa-plus me-1"></i> Додати викладача
        </button>
    </div>
</div>

<!-- Модальне вікно для викладачів -->
<div class="modal fade" id="teacherModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="teacherModalLabel" class="modal-title"></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="teacherId" />
                <div class="mb-3">
                    <label for="fullName" class="form-label">ПІБ</label>
                    <input type="text" id="fullName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="position" class="form-label">Посада</label>
                    <input type="text" id="position" class="form-control" />
                </div>
                @* userId можна додати за потребою *@
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-light" data-bs-dismiss="modal">Закрити</button>
                <button class="btn btn-primary" id="saveTeacherBtn">Зберегти</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/teachers.js"></script>
}
